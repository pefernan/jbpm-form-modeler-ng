<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    >

  <ui:style>
    .canvasContainer {
      max-height: 100%;
      max-width: 100%;
      overflow: auto;
    }
  </ui:style>
  <g:HTMLPanel>
    <style>
      .BgTable {
        background-color: #FFFFFF !important;
        border-collapse: collapse;
        margin: 0px;
        width: 100%;
        height: 600px;

      }
      .TdLateralTable {
        background-color: #FFFFFF !important;
        vertical-align: top;
        width: 20%;
      }
      .TdCentralTable {
        background-color: #FFFFFF !important;
        vertical-align: top;
      }
    </style>
    <b:Navbar ui:field="header">
      <b:Nav>
        <b:NavText ui:field="layoutText"/>
      </b:Nav>
      <b:Nav>
        <b:ButtonGroup ui:field="layoutButtons"/>
      </b:Nav>
      <b:Nav>
        <b:NavText ui:field="labelText"/>
      </b:Nav>
      <b:Nav>
        <b:ButtonGroup ui:field="labelPositionButtons"/>
      </b:Nav>
    </b:Navbar>
    <table class="BgTable">
      <tr>
        <td class="TdLateralTable">
          <div class="well well-small">
            <div style="height:600px; overflow:auto;">
              <g:SimplePanel ui:field="fieldsContainer"/>
            </div>
          </div>
        </td>
        <td class="TdLateralTable">
          <div class="well well-small">
            <div style="height:600px; width:100%">
              <g:SimplePanel ui:field="propertiesContainer"/>
            </div>
          </div>
        </td>
        <td class="TdCentralTable">
          <g:SimplePanel ui:field="canvasContainer" addStyleNames="{style.canvasContainer}"/>
        </td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>
