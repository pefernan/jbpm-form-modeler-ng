<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
    >

  <g:HTMLPanel>
    <style>
      .bindedElementOff {
        opacity:0.5;
        filter: alpha(opacity=50);
      }
      .bindedElementOn {
        background: rgb(255, 255, 255);
        background: -moz-linear-gradient(90deg, rgb(255, 255, 255) 30%, rgb(132, 213, 252) 70%);
        background: -webkit-linear-gradient(90deg, rgb(255, 255, 255) 30%, rgb(132, 213, 252) 70%);
        background: -o-linear-gradient(90deg, rgb(255, 255, 255) 30%, rgb(132, 213, 252) 70%);
        background: -ms-linear-gradient(90deg, rgb(255, 255, 255) 30%, rgb(132, 213, 252) 70%);
        background: linear-gradient(180deg, rgb(255, 255, 255) 30%, rgb(132, 213, 252) 70%);
        border: solid 1px #E6E6E6;
      }
    </style>
    <g:SimplePanel ui:field="treeContainer"/>
  </g:HTMLPanel>
</ui:UiBinder>